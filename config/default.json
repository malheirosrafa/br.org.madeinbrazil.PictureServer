{
  "server": {
    "port": 8080,
    "cluster": false
  },
  "db": {
    "host": "mongodb://localhost/picture-server"
  },
  "pictureTemplates" : {
    "capa": {
      "formats": {
        "large.jpg": {
          "width":1280, "quality": 40
        },
        "medium.jpg": {
          "width":640, "quality": 50
        },
        "small.jpg": {
          "width":320, "quality": 50
        }
      }
    },
    "foto": {
      "formats": {
        "normal.jpg": {
          "width":640, "quality": 70
        },
        "thumb.jpg": {
          "width":150, "height":150, "quality": 50, "crop":"true", "gravity":"Center", "options":"^"
        }
      }
    },
    "promo": {
      "formats": {
        "normal.jpg": {
          "width":640, "quality": 70
        }
      }
    }
  }
}
